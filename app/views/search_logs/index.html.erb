<h1 class="my-4 text-center text-4xl font-extrabold tracking-tight leading-none text-gray-900 dark:text-white">
    Popular Search terms
</h1>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3 bg-gray-50 dark:bg-gray-800">
                    Search Term
                </th>
                <th scope="col" class="px-6 py-3">
                    IP Address
                </th>
                <th scope="col" class="px-6 py-3 bg-gray-50 dark:bg-gray-800">
                    First Searched on
                </th>
                <th scope="col" class="px-6 py-3">
                    # of Searches
                </th>
            </tr>
        </thead>
        <tbody>
            <% @search_logs.each do |search_log| %>
                <tr class="border-b border-gray-200 dark:border-gray-700">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap bg-gray-50 dark:text-white dark:bg-gray-800">
                        <%= search_log.term %>
                    </th>
                    <td class="px-6 py-4">
                        <%= search_log.ip_address %>
                    </td>
                    <td class="px-6 py-4 bg-gray-50 dark:bg-gray-800">
                        <%= search_log.updated_at.strftime('%d %B %Y at %I:%M %P') %>
                    </td>
                    <td class="px-6 py-4">
                        <%= search_log.count %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<%= will_paginate @search_logs %>
